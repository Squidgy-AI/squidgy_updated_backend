# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key

# =============================================================================
# AI API KEYS (REQUIRED)
# =============================================================================
# OpenAI API Key
OPENAI_API_KEY=sk-proj-your-openai-api-key

# Perplexity AI
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key

# OpenRouter API (for embeddings)
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# Solar API
SOLAR_API_KEY=your-solar-api-key

# =============================================================================
# NEON DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Neon Postgres connection credentials
# Used to query user_vector_knowledge_base table
NEON_DB_HOST=your-neon-endpoint-pooler.eu-west-2.aws.neon.tech
NEON_DB_PORT=5432
NEON_DB_USER=neondb_owner
NEON_DB_PASSWORD=your-neon-password
NEON_DB_NAME=neondb

# =============================================================================
# N8N WEBHOOK CONFIGURATION (REQUIRED)
# =============================================================================
N8N_MAIN=https://your-n8n-instance/webhook/your-webhook-id
N8N_MAIN_TEST=https://your-n8n-instance/webhook-test/your-webhook-id

# =============================================================================
# GHL (GOHIGHLEVEL) CONFIGURATION (REQUIRED)
# =============================================================================
# GHL API Configuration
GHL_COMPANY_ID=your-ghl-company-id
GHL_AGENCY_TOKEN=pit-your-agency-token
GHL_SNAPSHOT_ID=your-snapshot-id

# HighLevel Login Credentials (for automation)
HIGHLEVEL_EMAIL=your-highlevel-email@example.com
HIGHLEVEL_PASSWORD=your-highlevel-password

# Gmail 2FA for GHL automation
GMAIL_2FA_EMAIL=your-2fa-email@gmail.com
GMAIL_2FA_APP_PASSWORD=your-gmail-app-password

# =============================================================================
# HEROKU CONFIGURATION (OPTIONAL - Auto-set by Heroku)
# =============================================================================
# These are automatically set by Heroku, do not set manually:
# WEB_CONCURRENCY - Number of worker processes
# DATABASE_URL - PostgreSQL connection string (if using Heroku Postgres)
# DYNO - Dyno identifier