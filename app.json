{
    "name": "Squidgy Backend",
    "description": "Squidgy AI backend API",
    "repository": "https://github.com/Squidgy-AI/Squidgy_backend_heroku",
    "keywords": ["python", "fastapi", "ai"],
    "buildpacks": [
      {
        "url": "https://github.com/heroku/heroku-buildpack-apt"
      },
      {
        "url": "heroku/python"
      },
      {
        "url": "https://github.com/mxschmitt/heroku-buildpack-playwright"
      }
    ],
    "addons": [
      "rediscloud:30"
    ],
    "env": {
      "ENVIRONMENT": {
        "description": "Application environment",
        "value": "production"
      },
      "OPENAI_API_KEY": {
        "description": "OpenAI API key",
        "required": true
      },
      "PLAYWRIGHT_BROWSERS_PATH": {
        "description": "Path for Playwright browsers",
        "value": "/app/browsers"
      },
      "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": {
        "description": "Skip browser download during pip install",
        "value": "1"
      }
    }
  }